{
  "name": "vscode-conventional-commits-extension",
  "version": "0.1.0",
  "description": "Author your Commit Message like your Code",
  "keywords": [
    "vscode",
    "conventional-commits",
    "commit",
    "git"
  ],
  "author": "Thomas Wirth <thomas@wtho.de",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wtho/vscode-conventional-commits.git"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:git-commit",
    "onCommand:commitPro.editor.command.openEditor"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "commitPro.enableDefaultCommitlintRulesDiagnostics": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "enables the default commitlint rules to be applied even without a commilint config file which resemble the conventional commits specification"
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "commitPro.editor.command.openEditor",
        "title": "Open Commit Message Editor",
        "category": "Git",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "commitPro.editor.command.openEditor",
          "when": "config.git.enabled && !git.missing && gitOpenRepositoryCount != 0"
        }
      ],
      "scm/title": [
        {
          "command": "commitPro.editor.command.openEditor",
          "group": "navigation@1",
          "title": "Edit",
          "when": "scmProvider == git"
        },
        {
          "command": "commitPro.editor.command.openEditor",
          "group": "inline",
          "title": "Edit",
          "when": "scmProvider == git"
        }
      ]
    }
  },
  "configurationDefaults": {
    "[git-commit]": {
      "editor.semanticHighlighting.enabled": true
    },
    "commitPro.enableDefaultCommitlintRulesDiagnostics": true
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "eslint": "^8.14.0",
    "typescript": "^4.6.4"
  }
}
