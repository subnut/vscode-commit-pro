{
  "name": "vscode-conventional-commits-extension",
  "version": "0.1.0",
  "description": "Author your Commit Message like your Code",
  "keywords": [
    "vscode",
    "conventional-commits",
    "commit",
    "git"
  ],
  "author": "Thomas Wirth <thomas@wtho.de",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wtho/vscode-conventional-commits.git"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:git-commit"
  ],
  "main": "./client/out/extension",
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "configurationDefaults": {
    "git-commit": {
      "editor.semanticHighlighting.enabled": true
    },
    "[git-commit]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/node": "^14.17.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "typescript": "^4.6.3"
  }
}
